{
    "name": "sebkay/laravel-inertia-template",
    "type": "project",
    "description": "A starter project for Laravel apps using Inertia and Vue.",
    "license": "MIT",
    "require": {
        "php": "^8.0.2",
        "guzzlehttp/guzzle": "^7.5",
        "inertiajs/inertia-laravel": "^0.6.4",
        "laravel/framework": "^9.43",
        "laravel/sanctum": "^3.0.1",
        "laravel/tinker": "^2.7.3",
        "tightenco/ziggy": "^1.5"
    },
    "require-dev": {
        "fakerphp/faker": "^1.20",
        "laravel/pint": "^1.2.1",
        "laravel/sail": "^1.16.3",
        "mockery/mockery": "^1.5.1",
        "nunomaduro/collision": "^6.3.1",
        "pestphp/pest": "^1.22.3",
        "pestphp/pest-plugin-faker": "^1.0",
        "pestphp/pest-plugin-laravel": "^1.3",
        "pestphp/pest-plugin-parallel": "^1.2",
        "phpunit/phpunit": "^9.5.26",
        "spatie/laravel-ignition": "^1.6.1",
        "spatie/ray": "^1.36"
    },
    "autoload": {
        "psr-4": {
            "App\\": "app/",
            "Database\\Factories\\": "database/factories/",
            "Database\\Seeders\\": "database/seeders/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "scripts": {
        "build:dev": [
            "composer install",
            "php artisan migrate:fresh --seed",
            "npm install",
            "npm run dev"
        ],
        "build:prod": [
            "composer install --no-interaction --prefer-dist --optimize-autoloader --no-dev",
            "php artisan migrate",
            "npm install",
            "npm run prod"
        ],
        "build:test": "composer install --no-interaction",
        "test": "php artisan test --parallel --stop-on-failure",
        "test:coverage": "XDEBUG_MODE=coverage php artisan test --parallel --coverage --min=85",
        "post-autoload-dump": [
            "Illuminate\\Foundation\\ComposerScripts::postAutoloadDump",
            "@php artisan package:discover --ansi"
        ],
        "post-update-cmd": [
            "@php artisan vendor:publish --tag=laravel-assets --ansi --force"
        ],
        "post-root-package-install": [
            "@php -r \"file_exists('.env') || copy('.env.example', '.env');\""
        ],
        "post-create-project-cmd": [
            "@php artisan key:generate --ansi"
        ]
    },
    "config": {
        "optimize-autoloader": true,
        "preferred-install": "dist",
        "sort-packages": true,
        "allow-plugins": {
            "pestphp/pest-plugin": true
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
